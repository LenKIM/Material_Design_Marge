<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="Set the way of Login way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:background="#ecec"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <Button
            android:id="@+id/realms_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/realms_login"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />

    <Button
            android:id="@+id/shared_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sqllite_login"
            android:textSize="20sp"
            android:layout_below="@+id/realms_login"
            android:layout_centerHorizontal="true"
            />


</RelativeLayout>